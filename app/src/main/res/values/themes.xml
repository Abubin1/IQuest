<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема (Material 3) -->
    <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.MyApp.Theme1" parent="Theme.MyApp">
        <item name="android:windowBackground">@drawable/back2</item>
        <item name="leaderboardTextColor">@color/white</item>
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="colorSurfaceContainer">@color/bottom_nav_color_1</item>
        <item name="android:statusBarColor">@color/bottom_nav_color_1</item>
        <item name="colorPrimaryContainer">@color/bottom_nav_color_1</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
