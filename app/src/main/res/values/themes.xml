        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="itemIconTint">?attr/colorOnPrimaryContainer</item>
        <item name="itemTextColor">?attr/colorOnSurfaceVariant</item>
    </style>
