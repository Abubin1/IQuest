<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvInviteTeam"
        android:textColor="?attr/leaderboardTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Команда: "
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvInviteCaptain"
        android:textColor="?attr/leaderboardTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Капитан: "
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tvInviteStatus"
        android:textColor="?attr/leaderboardTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус: "
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnAcceptInvite"
            android:backgroundTint="?attr/colorButtonNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Принять"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnDeclineInvite"
            android:backgroundTint="?attr/colorButtonNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отклонить"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout> 